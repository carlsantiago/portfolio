<div class="col-md-4 projectCard">
    <div class="card border-white bg-dark bg-gradient text-white text-center">
        <img src="/images/{{img}}" class="rounded-start card-img-top">
        <div class="card-body cardDesc">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">
                {{description}}
            </p>
            <p class="card-text">
                <small class="text-muted">
                    {{techUsed}}
                </small>
            </p>
        </div>
        <div class="d-flex justify-content-end p-2 card-footer">
            <a href="{{github}}" class="card-link" target="_blank">
                <button type="button" class="btn btn-outline-secondary">
                    <i class="bi bi-github text-white"></i>
                </button>
            </a>
            <a href="{{deployLink}}" class="card-link" target="_blank">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-box-arrow-in-up-right text-white"></i>
                </button>
            </a>
        </div>
    </div>
</div>